<h1>Todo list</h1>
<h3><%= link_to "New Todo", new_todo_path %></h3>
<table>
  <tr>
    <th>Title</th>
    <th colspan="3"></th>
  </tr>

  <% @todos.each do |todo| %>
    <tr>
      <td><%= todo.title %></td>
      <td><%= link_to 'Show', todo_path(todo) %></td>
      <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
      <td><%= link_to 'Delete', todo_path(todo),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>


