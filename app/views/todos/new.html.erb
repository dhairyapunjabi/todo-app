
<%= form_with scope: :todo, url: todos_path, local: true do |form| %>

  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container-fluid">
      <div class="navbar-header">
        <div class ="navbar-brand">
          <strong>

            <div class="active">
              <%= link_to todos_path do  %>
                <div style="color:hsl(216, 80%, 50%);"><strong>   <span class="glyphicon glyphicon-home"></span>Home</strong></div><% end %>
            </div>
        </strong> </div>
      </div>
    </div>
  </nav>
  <div class="container col-xl-10 col-xl-offset-1" style="position:relative; top:100px;">
    <p>
      <h1 class="display-2">   <%= form.label :title %></h1><br>
      <%= form.text_field :title %>
    </p>

    <p>
      <%= form.submit %>
    </p>
  </div>
<% end %>
